<%- include('./partials/head.ejs') %>

<body>
    <div class="container">

        <!-- Search Form -->
        <form action="/result" method="GET">
            <input type="text" name="username" placeholder="Search for a username...">
            <button type="submit">Search</button>
        </form>

        <p>Usernames</p>
        <ul>
            <% usernames.forEach( username => { %>
                <li><%= username.name %></li>
            <% }); %>
        </ul>
        <a href="/">Go Back to Home</a>
    </div>
</body>

</html>